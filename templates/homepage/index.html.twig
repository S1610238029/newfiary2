                <h3>Beitrag erstellt am: {{ entry.date }}</h3>
                <p>{{ entry.feed }}</p><br>
            </div>
        </div>
    </div>

    
    <a href="{{ path('newentry') }}" class="bigredbutton">Eintrag hinzuf√ºgen</a>

{% endblock %}
