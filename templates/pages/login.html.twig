<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">

    <title>{% block title %}Hello!{% endblock %}</title>

    <!-- Including the Stylesheet -->

    <link rel="stylesheet" href= "{{ asset('assets/css/loginform_test.css') }}">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">

</head>
<body>
{% block body %}

<div class="login">

    <img  src=" {{ asset('assets/img/logo_white.png') }}" alt="logout symbol">
    <br>

    <!-- Headline of the Login Form  -->
    <h2 class="active"> Welcome to Fiary! </h2>

    <form action="{{ path('login') }}" method="POST">

        <!-- Error Messages here-->
        {% if error %}
        <span class="error">{{ error.messageKey }}</span>
        {% endif %}

        <!-- Username Field -->
        <input type="text" class="text" name="_username" value="{{ last_username }}" placeholder="Username">
        <span>username</span>

        <!-- Formatting -->
        <br>
        <br>

        <!-- Password Field -->
        <input type="password" class="text" name="_password" placeholder="Password">
        <span>password</span>
        <br>

        <!--input type="hidden" name="go_to" value="{{ path('homepage') }}" />
        <input type="hidden" name="back_to" value="{{ path('login') }}" />-->

        <button type="submit" class="signin">
          Login
        </button>

        <hr>
        <br><br>

    </form>

    <!--Link to Register Form
      <button type="button" class="signin" onclick="location.href='{{ path('user_registration') }}'">
        No User? Register here!
    </button>
     -->


</div>
{% endblock %}
</body>
</html>
