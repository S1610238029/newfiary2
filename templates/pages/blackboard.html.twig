{% extends 'base.html.twig' %}

{% block title %}Schwarzes Brett{% endblock %}



{% block body %}
    <h1>Schwarzes Brett</h1>


    <!--Permission Überprüfung -->
    {% if is_granted('ROLE_REGISTERED') %}
        <a href="{{ path('blackboard_neu') }}">Neuen Feed anlegen</a>
    {% endif %}

    <section class="details-card">
        <div class="container">
            <div class="row">
                {%  for entry in feeds %}
                <div class="col-md-4">
                    <div class="card-content">
                       <div class="card-desc">
                            <h3>{{ entry.title }}</h3>
                            <p>{{ entry.feed }}</p>
                            <p class="btn-card">Erstellt am: {{ entry.date }}</p>

                           {% if is_granted('ROLE_REGISTERED') %}
                               <a href="{{ path('feed_edit', {'id':entry.idfeed}) }}">Bearbeiten</a><br>
                               <a href="{{ path('feed_delete', {'id':entry.idfeed}) }}">Löschen</a>
                           {% endif %}
                           
                        </div>
                    </div>
                </div>

                    {% endfor %}

                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}