{% extends 'base.html.twig' %}

{% block title %}Schwarzes Brett{% endblock %}

{% block body %}

    <link rel="stylesheet" href= "{{ asset('assets/css/newsfeed.css') }}">

    <h1 id="newsheading">News</h1><br><hr><br>

    <!--Permission Überprüfung -->
    {% if is_granted('ROLE_REGISTERED') %}
        <a href="{{ path('blackboard_neu') }}" class="bigredbutton">Neuen Feed anlegen</a><br><hr><br>
    {% endif %}

    <!-- CARDS STARTING -->
    <section>
        <div class="container">
            <div class="row">

                {%  for entry in feeds %}

                    <div class="blog-card">
                        <div class="description">
                            <h1>{{ entry.title }}</h1>
                            <h2>Beitrag erstellt am: {{ entry.date }}</h2>
                            <p>{{ entry.feed }}</p><br>
                            <div id="buttons">
                                {% if is_granted('ROLE_REGISTERED') %}
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="col-lg-6" id="firstbutton">
                                                <a href="{{ path('feed_edit', {'id':entry.idfeed}) }}" class="bigredbutton">Bearbeiten</a></li>
                                            </div>
                                            <div class="col-lg-6">
                                                <a href="{{ path('feed_delete', {'id':entry.idfeed}) }}" class="bigredbutton">Löschen</a></li>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </section>

