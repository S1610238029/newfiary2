{% extends 'base.html.twig' %}

{% block title %}Statistik{% endblock %}


{% block body %}

    <link rel="stylesheet" href= "{{ asset('assets/css/statistics.css') }}">

    <h1>Statistiken</h1>

    <h2>Dies hier sind noch Placeholder!</h2><br><br>

