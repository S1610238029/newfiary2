{% extends 'base.html.twig' %}

{% block title %}Registered Users{% endblock %}

{% block body %}

    <style>

        /* Bereits responsive */
        #adduser {
            background-color: var(--red);
            color: #FFF;
            width: 15vw;
            padding: 10px 20px;
            display: block;
            border-radius: 10px;
            border: none;
            text-decoration: none;
            text-align: center;
            /*font-size: 1vw;*/
        }

        #adduser:hover {
            background: #c10612;
            cursor: pointer;
        }

        /* Hier müssen die Werte dann noch an das Burgermenü angepasst werden*/
        @media (min-width: 501px) {
            #adduser {
                font-size: 15px;
            }
        }

        @media (max-width: 500px) {
            #adduser {
                font-size: 8px;
            }
        }


        /* Formatting the User List itself */
        #userlist {
            color: var(--red) !important;
            text-transform: capitalize; /* Kann man auch weggeben wenn nicht benötigt */
            text-decoration: none;
            width: 80%;
        }

        a {
            color: var(--red);
        }

        a:hover {
            text-decoration: none;
            cursor: pointer;
            color: var(--red);
            font-weight: bold;
        }


    </style>

    <h2>Registrierte Nutzer:</h2><br>

    <div class="formatting">
    <ul class="list-group" id="userlist">
        {% for user in users %}
            <li class="list-group-item list-group-item-action" id="format">
                <a href="{{  path('user_edit', {id: user.id}) }}">

                    {{  user.username }} --  Rechte:
                    {% if roleArray[user.id] == 'ROLE_ADMIN' %}
                        Admin
                    {% elseif roleArray[user.id] == 'ROLE_REGISTERED' %}
                        Registered
                    {% elseif roleArray[user.id] == 'ROLE_USER' %}
                        User
                    {% endif %}

                </a>
            </li>
        {% endfor %}
    </ul>
    </div>

    <br>
    <a href="{{  path('user_registration') }}" id="adduser">Nutzer anlegen</a>
{% endblock %}